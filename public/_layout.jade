!!!5
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title
      if (!!title)
        != title
        if (!!subtitle)
          |  
          != subtitle
        |  - 
      != site.name

    if (!!meta && meta.description)
      meta(name='description', content='#{ meta.description }')

    link(href='//fonts.googleapis.com/css?family=Orbitron:400,900,700', rel='stylesheet')
    link(href='//fonts.googleapis.com/css?family=Source+Sans+Pro:400,700,400italic,700italic', rel='stylesheet')
    link(href='/assets/css/app.css', rel='stylesheet')

    != partial('_icons')

    //if lt IE 9
      script(src='//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='//oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body
   
    header.site-header
      .container
        .row
          .col-xs-12.col-md-4
            .logo-container
              a.link-logo(href='/', title='#{ site.name }')
                img.img-logo.img-responsive(src='/assets/img/web-logo-main-500.png', alt='#{ site.name }')
          .col-xs-12.col-md-8
            != partial('_nav')

    .site-main
      != yield

    footer.site-footer
      .container
        .row
          .col-xs-12
            p &copy; #{ new Date().getFullYear() } 
              a.ext(href='http://www.proppercs.com')= site.name
              |. All rights reserved.

    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
    script(src='/assets/js/bootstrap.min.js')
    script(src='/assets/js/main.js')
